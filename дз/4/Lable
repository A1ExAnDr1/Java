пакет  ru.mirea.pr4 ;

import  javax.swing. * ;
import  java.awt. * ;
import  java.awt.event. * ;

открытый  класс  Label  расширяет  JFrame {

    public  static  void  main ( String [] args ) {
        новый  ярлык ();
    }

    int MilanScore   =  0 ,
        MadridScore  =  0 ;

    Результат JLabel =  новый  JLabel ( " Результат: " );
    JLabel resultScore =  new  JLabel ( " 0: 0 " );
    JLabel оценка   =  новый  JLabel ( " Последний бомбардир: N / A " );
    Победитель JLabel =  новый  JLabel ( « Победитель: НИЧЬЯ » );

    Font font =  new  Font ( " Consolas " , Font . BOLD , 35 );

    public  void  printWinner () {
        if ( MilanScore  >  MadridScore ) {
            победитель . setText ( " Победитель: Милан " );
        } else  if ( MilanScore  ==  MadridScore ) {
            победитель . setText ( " РИСУНОК " );
        } else {
            победитель . setText ( « Победитель: Реал Мадрид » );
        }
    }

    public  void  JLabelStyle ( JLabel  jlabel ) {
        jlabel . setHorizontalAlignment ( JLabel . CENTER );
        jlabel . setFont (шрифт);
    }

    private  void  updateResult () {
        resultScore . setText ( MadridScore  +  " : "  +  MilanScore );
        printWinner ();
    }

    Label () {
        JButton  ACMilan     =  новый  JButton (    " <html> "  +
                " <font size = 15> "  +
                " <p align = \" center \ " > "  +
                « Милан » );
        JButton  RealMadrid  =  новый  JButton ( " <html> "  +
                " <font size = 15> "  +
                " <p align = \" center \ " > "  +
                « Реал Мадрид » );

        добавить ( ACMilan ); добавить ( RealMadrid );

        setLayout ( нуль );
        setSize ( 470 , 215 );
        setLayout ( новый  BorderLayout ());
        setResizable ( ложь );

        ACMilan . setPreferredSize ( новое  измерение ( 150 , 80 ));
        RealMadrid . setPreferredSize ( новое  измерение ( 150 , 80 ));

        ACMilan . setFocusable ( ложь );
        ACMilan . setBorderPainted ( правда );
        RealMadrid . setFocusable ( ложь );
        RealMadrid . setBorderPainted ( правда );

        // Милан
        добавить ( ACMilan , BorderLayout . EAST );
        ACMilan . addActionListener (событие - > {
            MilanScore ++ ;
            updateResult ();
            оценка . setText ( " Последний счет: Милан " );
        });

        // Реал Мадрид
        добавить ( RealMadrid , BorderLayout . WEST );
        RealMadrid . addActionListener (событие - > {
            MadridScore ++ ;
            updateResult ();
            оценка . setText ( " Последний результат: Реал Мадрид " );
        });

        JPanel resultPanel =  новый  JPanel ();
        resultPanel . setPreferredSize ( новое  измерение ( 50 , 50 ));
        добавить (resultPanel, BorderLayout . CENTER );
        resultPanel . добавить (результат, BorderLayout . ЦЕНТР );
        resultPanel . добавить (resultScore, BorderLayout . ЮГ );
        JLabelStyle (результат);
        JLabelStyle (resultScore);
        / *
        добавить (результат, BorderLayout.CENTER);
        JLabelStyle (результат);
        добавить (resultScore, BorderLayout.CENTER);
        JLabelStyle (resultScore);
* /
        добавить (победитель, BorderLayout . СЕВЕР );
        JLabelStyle (победитель);

        добавить (оценка, BorderLayout . ЮГ );
        JLabelStyle (оценка);

        setVisible ( правда );
    }


}
